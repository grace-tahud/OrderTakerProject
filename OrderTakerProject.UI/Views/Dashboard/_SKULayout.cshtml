@model OrderTakerProject.UI.Models.SKUViewModel

<div class="row">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSkuModal">
        Add SKU
    </button>
    <br />
    @{
        if (Model.SKUs != null && Model.SKUs.Any())
        {

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Code</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Is Active?</th>
                        <th scope="col">Image</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sku in Model.SKUs)
                    {
                        <tr>
                            <th scope="row">@sku.Name</th>
                            <td>@sku.Code</td>
                            <td>@sku.UnitPrice</td>
                            <td>@sku.IsActive</td>
                            <td><img id="skuImage" style="width:50px;height:100px;" src="data:image/jpg;base64, @Convert.ToBase64String(sku.SKUImage)"></td>
                            <th scope="col">
                                <button onclick="openUpdateSKUModal(@sku.Id)"
                                        class="btn btn-primary">
                                    Update
                                </button>

                            </th>
                        </tr>
                    }
                </tbody>
            </table>

        }
    }

    <!-- Button trigger modal -->
</div>
<partial name="_AddSKU.cshtml" />
<partial name="_UpdateSKU.cshtml" />
